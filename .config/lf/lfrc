set preview true;
set previewer ~/.config/lf/preview.sh
set cleaner ~/.config/lf/cleaner.sh

set relativenumber true


cmd open ${{
    echo "f: $f fx: $fx"
    filetype=$(file --mime-type -Lb "$f")
    echo "$filetype"
    case "$filetype" in
        text/*) nvim "$f";;
        image/*) imv "$f";;
        video/*) mpv "$f";;
        application/pdf) zathura $f;;
        application/vnd.oasis.opendocument.*) libreoffice $f;;
    esac
}}
