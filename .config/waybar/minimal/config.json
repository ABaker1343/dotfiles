{
        "output" : ["DP-2", "eDP-1"],
        "position" : "top",
        "layer" : "top",
        "height" : 0,
        "start_hidden" : true,

        "modules-left" : ["hyprland/workspaces"],
        "modules-center" : [],
        "modules-right" : ["clock", "battery", "backlight", "cpu", "memory", "pulseaudio", "tray"],

        "hyprland/workspaces" : {
            "format" : "{name}",
            "sort-by-number" : true,
        },

        "wlr/taskbar" : {
            "format" : "{icon} {app_id}",
            "icon-size" : 14,
            "on-click" : "activate",
            "on-click-middle" : "close",
        },

        "privacy" : {
            "transition-duration" : 10,
            "modules" : [
                {
                    "type" : "audio-out",
                    "tooltip" : true,
                },
                {
                    "type" : "audio-in",
                    "tooltip" : true,
                },
                {
                    "type" : "screenshare",
                    "tooltip" : true,
                },
            ],
            "on-click" : "playerctl -p spotify play-pause"
        },

        "clock" : {
            "interval" : 30,
            "format" : "{:%H:%M %a %d} | ",
            "tooltip-format": "<tt>{calendar}</tt>",
            "calendar" : {
                "mode" : "month",
                "on-scroll" : 1,
            },
            "actions" : {
                "on-click" : "mode",
                "on-scroll-up" : "shift_down",
                "on-scroll-down" : "shift_up",
            },
        },

        "battery" : {
            "interval" : 60,
            "states" : {
                "warning" : 25,
                "critical" : 10,
            },
            "format" : "ðŸ”‹ {capacity}%",
        },

        "cpu" : {
            "interval" : 1,
            "format" : "{}% | ",
            "on-click" : "kitty -e htop",
        },

        "memory" : {
            "interval" : 1,
            "format" : "{used}/{total} | ",
            "on-click" : "kitty -e btop",
        },

        "backlight" : {
            "format" : "{percent}%",
        },

        "pulseaudio" : {
            "format" : "ðŸ”Š {volume}% | ",
            "on-click" : "pavucontrol",
        },

        "tray" : {
            "icon-size" : 14,
            "spacing" : 5,
        },

        "bluetooth" : {
            "format" : "{status} : {icon} : {num_connections} | ",
            "on-click" : "blueberry",
        },

        "custom/usb" : {
            "format" : "Reset USB",
            "on-click" : "pkexec usbreset.sh",
        },

    }
